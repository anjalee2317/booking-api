generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        String        @id @default(uuid())
  startTime DateTime      @db.Timestamp()
  endTime   DateTime      @db.Timestamp()
  notes     String?       @db.VarChar(255) // Optional string field
  status    BookingStatus @default(PENDING)
  userId    String // Assuming userId is a string/UUID from a User model (not defined here)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // TODO: If you had a User model, you would define the relation here:
  // user      User      @relation(fields: [userId], references: [id])

  @@map("bookings") // Maps the model name to a table name
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
